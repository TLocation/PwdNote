<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
       android:layout_alignParentBottom="true"
        android:id="@+id/input_pwd_list"
        android:layout_height="400dp"/>
    <Button
        android:layout_marginBottom="20dp"
        android:layout_above="@id/input_pwd_list"
        android:layout_alignParentRight="true"
        android:id="@+id/input_pwd_confirm"
        android:text="确定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
       android:layout_alignTop="@id/input_pwd_confirm"
        android:layout_toLeftOf="@id/input_pwd_confirm"
        android:id="@+id/input_pwd_edittext"
        android:enabled="false"
        android:hint="输入根密码"
        android:gravity="center"
        android:inputType="numberPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_view_height"/>

</RelativeLayout>